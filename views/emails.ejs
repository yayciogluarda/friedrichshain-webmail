<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="robots" content="noindex" />
  <title>Friedrichshain Police | Mailbox</title>
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles.css">
</head>

<body>
  <div class="container-fluid">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark-blue">
      <a class="navbar-brand" href="/emails">
        <img class="d-inline-block align-top" src="/images/police-logo.png" alt="Logo" height="40">
        Friedrichshain Police Webmail
      </a>
    </nav>

    <!-- Mailbox content -->
    <div class="row mt-3">
      <div class="col-md-12">
        <div class="card shadow-sm">
          <div class="card-header bg-dark-blue text-white">
            <h3 class="card-title">Inbox</h3>
          </div>
          <div class="card-body p-0">
            <!-- Pagination controls -->
            <div class="d-flex justify-content-between p-2">
              <div>1-13/13</div>
              <div class="btn-group">
                <button class="btn btn-sm" disabled><i class="fas fa-chevron-left"></i></button>
                <button class="btn btn-sm" disabled><i class="fas fa-chevron-right"></i></button>
              </div>
            </div>
            <!-- Email Table -->
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <tbody>
                  <% emails.forEach(email => { %>
                    <tr data-href="/emails/<%= email.id %>">
                      <td><b><%= email.sender %></b></td>
                      <td><b><%= email.subject %></b></td>
                      <td><%= email.attachment ? '<i class="fas fa-paperclip"></i>' : '' %></td>
                      <td><%= email.date %></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>

          <!-- Footer -->
          <div class="card-footer bg-dark-blue text-white">
            <div class="d-flex justify-content-between">
              <div>1-13/13</div>
              <div class="btn-group">
                <button class="btn btn-sm" disabled><i class="fas fa-chevron-left"></i></button>
                <button class="btn btn-sm" disabled><i class="fas fa-chevron-right"></i></button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Add click functionality to rows
    document.addEventListener("DOMContentLoaded", () => {
      document.querySelectorAll("tr[data-href]").forEach(row => {
        row.style.cursor = "pointer";
        row.addEventListener("click", () => {
          window.location.href = row.getAttribute("data-href");
        });
      });
    });
  </script>
</body>

</html>